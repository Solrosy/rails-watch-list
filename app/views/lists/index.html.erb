<div class="container p-3">
  <nav class="navbar navbar-dark bg-dark justify-content-between rounded-top-5">
    <span class="navbar-brand p-3">My Movie Library</span>
    <span class="px-3"><%= link_to "+ Add new list", new_list_url %></span>
  </nav>

<div class="shadow border">
<ul class="list-group">
  <% @lists.each do |list| %>
  <li class="list-group-item d-flex justify-content-between align-items-start py-3">
  <div class="ms-2 me-auto">
    <div class="fw-bold h5"><%= link_to list.name, list_path(list), class: "text-decoration-none text-dark stretched-link"%></div>
    </div>
    <span class="badge bg-primary rounded-pill"> <%= list.bookmarks.count %> </span>
    </li>
  <% end %>
</ul>
</div>

</div>
