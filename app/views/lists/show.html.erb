
<div class="container p-3 rounded-5">
  <nav class="navbar navbar-dark bg-dark justify-content-between rounded-top-5">
    <span class="navbar-brand p-3"><%= @list.name %></span>
    <span class="px-3"><%= link_to "Home", root_path %></span>
  </nav>

  <div class="shadow border">
    <ul class="list-group">
      <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item d-flex justify-content-between align-items-start py-3">
        <div class="ms-2 me-auto">
          <div class="fw-bold h5"><%= bookmark.movie.title %></div>
          <%= bookmark.movie.overview %>
          </div>
            <span class="badge bg-primary rounded-pill"><%= link_to bookmark_path(bookmark), data: {turbo_method: :delete} do %>
            <i class="fa-regular fa-trash-can" style="color:white"></i>
            <% end %></span>
      </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="container p-3">
  <nav class="navbar navbar-dark bg-primary justify-content-between rounded-top-5">
    <span class="navbar-brand p-3">Add entry</span>
  </nav>

<div class="shadow border p-3 rounded-bottom-5">
<%= simple_form_for([@list, @bookmark]) do |f| %>
      <%= f.input :movie, collection: @list.movies_not_in_list %>
      <%= f.input :comment %>
      <%= f.submit "Add"%>
    <% end %>
</div>

</div>
